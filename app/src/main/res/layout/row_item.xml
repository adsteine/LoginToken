<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:gravity="clip_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/card_edge"
        android:baselineAligned="false"
        android:gravity="start"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_id_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:baselineAligned="false"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:gravity="left"
                android:id="@+id/image_item"
                android:src="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/id_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:scrollHorizontally="false"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/layout_id_item"
            android:layout_marginEnd="20dp"
            android:baselineAligned="false"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:src="@android:drawable/ic_menu_preferences" />

            <TextView
                android:id="@+id/name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="15dp"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:scrollHorizontally="false"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_date_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/layout_name_item"
            android:baselineAligned="false"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:src="@android:drawable/ic_menu_today" />

            <TextView
                android:id="@+id/date_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="15dp"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:scrollHorizontally="false"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
